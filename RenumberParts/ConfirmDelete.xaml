<Window x:Class="RenumberParts.ConfirmDelete"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sw="clr-namespace:WpfStyleableWindow.StyleableWindow"
    Title="Warning" Height="143" Width="244" Style="{DynamicResource CustomWindowStyle}" >
    <Grid Margin="0,0,0,0" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="233*"/>
        </Grid.ColumnDefinitions>
        <Button Margin="21,70,0,0" x:Name="Button1" Grid.ColumnSpan="2" Content="Yes" HorizontalAlignment="Left" Width="80" Click="Button1_Click" Height="23" VerticalAlignment="Top"/>
        <Label Content="Are you sure you want to delete all&#xD;&#xA;values?" HorizontalAlignment="Left" Margin="21,13,0,0" VerticalAlignment="Top" Width="203" Grid.ColumnSpan="2"/>
        <Button Content="No" Grid.Column="1" Margin="76,70,24,0" VerticalAlignment="Top" Height="23" Click="Button_Click"/>
    </Grid>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
</Window>

